<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">



        <TextView
            android:id="@+id/text_student_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Present"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_student_name" />

        <TextView
            android:id="@+id/text_present_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:text="0"
            app:layout_constraintStart_toEndOf="@id/text_present"
            app:layout_constraintTop_toTopOf="@id/text_present" />

        <TextView
            android:id="@+id/text_absent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/text_present_value"
            app:layout_constraintTop_toTopOf="@id/text_present" />

        <TextView
            android:id="@+id/text_absent_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:text="0"
            app:layout_constraintStart_toEndOf="@id/text_absent"
            app:layout_constraintTop_toTopOf="@id/text_present" />

        <TextView
            android:id="@+id/text_late"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Late"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/text_absent_value"
            app:layout_constraintTop_toTopOf="@id/text_present" />

        <TextView
            android:id="@+id/text_late_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:text="0"
            app:layout_constraintStart_toEndOf="@id/text_late"
            app:layout_constraintTop_toTopOf="@id/text_present" />



</androidx.constraintlayout.widget.ConstraintLayout>