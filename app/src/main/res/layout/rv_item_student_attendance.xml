<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_student_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:text="Student Name" />

    <ToggleButton
        android:id="@+id/toggle_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Present"
        android:textOn="Present"
        android:textOff="Present" />

    <ToggleButton
        android:id="@+id/toggle_absent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absent"
        android:textOn="Absent"
        android:textOff="Absent" />

    <ToggleButton
        android:id="@+id/toggle_late"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Late"
        android:textOn="Late"
        android:textOff="Late" />

</LinearLayout>